<?php
$this->headLink()->appendStylesheet('/css/signin.css');

$form = $this->form;
$form->prepare();

$form->setAttribute('action', $this->url('tenil-user/default', array('controller'=> 'auth', 'action'=>'login')));

$formLabel = $this->plugin('formLabel');

echo $this->form()->openTag($form);

echo $formLabel->openTag() . $this->translate($form->getAttribute('label')) . $formLabel->closeTag();

$email = $form->get('email');
$email->setAttribute('autofocus', 'autofocus');
echo $this->formInput($email);

$password = $form->get('password');
echo $this->formInput($password);

$name = $form->get('submit');
echo $this->formSubmit($name);
